#!/bin/bash

BUILD_DIR=$1

indent() {
    sed -u 's/^/       /'
}

echo "-----> Found a .terraform_url file"

if [ ! -s $BUILD_DIR/.terraform_url ]; then
    echo ".terraform_url empty. Skipping." | indent
    exit 0
fi

UNZIP_COMMAND="unzip"

if [ $STACK == "cedar" ]; then
  UNZIP_COMMAND="jar xf"
fi

cd $BUILD_DIR
mkdir -p bin

echo "Reading urls"
while read url; do
  echo "$url"
  if [[ -n "$url" ]]; then
    echo "Vendoring $url" | indent
    curl -L --silent $url > $BUILD_DIR/bin/terraform.zip
    $UNZIP_COMMAND $BUILD_DIR/bin/terraform.zip && rm terraform.zip
  fi
done < "$BUILD_DIR/.terraform_url"