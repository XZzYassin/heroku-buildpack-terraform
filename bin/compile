#!/bin/bash

indent() {
    sed -u 's/^/       /'
}

echo "-----> Found a .terraform_url file"

if [ ! -s $1/.terraform_url ]; then
    echo ".terraform_url empty. Skipping." | indent
    exit 0
fi

UNZIP_COMMAND="unzip"

if [ $STACK == "cedar" ]; then
  UNZIP_COMMAND="jar xf"
fi

cd $1
mkdir -p bin

while read url; do
  if [ -n "$url" ]; then
    echo "Vendoring $url" | indent
    curl -L --silent $url > $bin/terraform.zip
    $UNZIP_COMMAND terraform.zip && rm terraform.zip
  fi
done < ".terraform_url"
