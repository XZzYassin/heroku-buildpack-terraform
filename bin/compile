#!/bin/bash

BUILD_DIR=$1

indent() {
    sed -u 's/^/       /'
}

echo "-----> Found a .terraform_url file"

if [ ! -s $BUILD_DIR/.terraform_url ]; then
    echo ".terraform_url empty. Skipping." | indent
    exit 0
fi

UNZIP_COMMAND="unzip"

if [ $STACK == "cedar" ]; then
  UNZIP_COMMAND="jar xf"
fi

mkdir -p $BUILD_DIR/.terraform/bin

while IFS='' read -r url || [[ -n "$url" ]]; do
  echo "Installing Terraform..." | indent
  curl -L --silent $url > $BUILD_DIR/.terraform/bin/terraform.zip
done < $BUILD_DIR/.terraform_url 

$UNZIP_COMMAND $BUILD_DIR/.terraform/bin/terraform.zip
mv terraform $BUILD_DIR/.terraform/bin/terraform
rm $BUILD_DIR/.terraform/bin/terraform.zip
echo "Done." | indent
